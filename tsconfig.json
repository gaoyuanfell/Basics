{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": true,
        "types": ["node"],
        "lib": ["es2015", "dom"],
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "filesGlob": [
        "**/*.ts",
        "!node_modules/**"
    ],
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}